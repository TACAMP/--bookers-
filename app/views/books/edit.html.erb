<%= form_with model:@book do |f| %>
<p class="title_edit">Title</p>
<span><%= f.text_field:title %></span>
<p class="body_edit">Body</p>
<span><%= f.text_area:body %></span>

<span><%= f.submit 'Update Book' %> </span>
<% end %>

<%= link_to'Show',"/books/#{@book.id}" %>
